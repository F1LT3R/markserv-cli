{
  "name": "markserv-cli",
  "version": "1.0.4",
  "description": "Markserv - realtime Markdown server.",
  "main": "lib/markserv.js",
  "bin": {
    "markserv": "lib/markserv.js"
  },
  "scripts": {
    "start": "node lib/markserv.js",
    "test": "xo && mocha test/specs/**/*.spec.js --recursive",
    "watch-test": "mocha test/specs/**/*.spec.js --recursive --watch"
  },
  "author": "f1lt3r",
  "license": "GPL-3.0",
  "dependencies": {
    "bluebird": "^3.4.6",
    "caller-id": "^0.1.0",
    "chalk": "^1.1.3",
    "cheerio": "^0.22.0",
    "commander": "^2.9.0",
    "connect": "^3.5.0",
    "console.colors": "^1.0.2",
    "death": "^1.0.0",
    "http-shutdown": "^1.1.0",
    "log4js": "^0.6.38",
    "minimatch": "^3.0.3",
    "require.async": "^0.1.1",
    "sigint": "^1.0.0",
    "http-shutdown": "^1.1.0"
  },
  "settings": {
    "configFilename": "Markconf.js",
    "defaultsFilename": "Markconf.Defaults.js"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "grunt": "^1.0.1",
    "mocha": "^3.1.0",
    "xo": "^0.17.0"
  },
  "xo": {
    "esnext": true,
    "space": 2,
    "globals": [
      "it",
      "describe",
      "beforeEach",
      "before",
      "after",
      "afterEach"
    ],
    "rules": {
      "import/no-extraneous-dependencies": 0,
      "import/no-dynamic-require": 0,
      "import/no-unresolved": 0,
      "no-use-extend-native": 0,
      "no-multi-str": 0
    },
    "overrides": [
      {
        "files": "**/Markconf.*",
        "rules": {
          "unicorn/filename-case": [
            "error",
            {
              "case": "pascalCase"
            }
          ]
        }
      }
    ]
  }
}
