{
  "name": "markserv-cli",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "xo && mocha core --recursive",
    "watch-test": "mocha core --recursive --watch"
  },
  "bin": {
    "markserv": "index.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bluebird": "^3.4.6",
    "commander": "^2.9.0",
    "connect": "^3.5.0"
  },
  "settings": {
    "configFilename": "Markconf.js",
    "defaultsFilename": "Markconf.Defaults.js"
  },
  "devDependencies": {
    "xo": "^0.17.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "mocha": "^3.1.0"
  },
  "xo": {
    "esnext": true,
    "space": 2,
    "globals": [
      "it" , 
      "describe",
      "beforeEach"
    ],
    "rules": {
      "import/no-dynamic-require": 0
    },
    "overrides": [
      {
        "files": "**/Markconf.*",
        "rules": {
          "unicorn/filename-case": ["error", {"case": "pascalCase"}]
        }
      }
    ]
  }
}
