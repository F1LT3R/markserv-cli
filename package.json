{
  "name": "markserv-cli",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "xo && mocha lib/*.spec.js --recursive",
    "watch-test": "mocha lib/*.spec.js --recursive --watch"
  },
  "bin": {
    "markserv": "index.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bluebird": "^3.4.6",
    "caller-id": "^0.1.0",
    "chalk": "^1.1.3",
    "commander": "^2.9.0",
    "connect": "^3.5.0",
    "console.colors": "^1.0.2",
    "death": "^1.0.0",
    "log4js": "^0.6.38",
    "require.async": "^0.1.1",
    "sigint": "^1.0.0"
  },
  "settings": {
    "configFilename": "Markconf.js",
    "defaultsFilename": "Markconf.Defaults.js"
  },
  "devDependencies": {
    "xo": "^0.17.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "mocha": "^3.1.0"
  },
  "xo": {
    "esnext": true,
    "space": 2,
    "globals": [
      "it",
      "describe",
      "beforeEach"
    ],
    "rules": {
      "import/no-dynamic-require": 0,
      "no-multi-str": 0,
      "no-use-extend-native": 0
    },
    "overrides": [
      {
        "files": "**/Markconf.*",
        "rules": {
          "unicorn/filename-case": [
            "error",
            {
              "case": "pascalCase"
            }
          ]
        }
      }
    ]
  }
}
